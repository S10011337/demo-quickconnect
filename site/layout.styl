@import 'nib'

remote_size = 80%;

html, body {
    width: 100%;
    height: 100%;
    margin: 0;
}

.container {
	font: 12px Arial, Helvetica;

	width: 100%;
	height: 100%;

	display: flex;
	flex-direction: column;
}

.zone {
	display: flex;
	&.remote {
		flex-direction: row;
		justify-content: space-between;

		video {
			flex: 1;
			width: 100%;
			max-height: 90%;
		}
	}
}

.local {
	display: block;
	position: absolute;
	float: left;
	bottom: 0;
	height: 15%;
	video {
		margin: 5px 0;
		height: 100%;
	}
}

.layout {
	display: flex;
	flex-direction: column;
	height: 100%;
	width: 100%;

	input[type="text"] {
		font-family: monospace;
		padding: 5px;
	}
}
