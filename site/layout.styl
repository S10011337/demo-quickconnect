@import 'nib'

remote_size = 85%;

html, body {
    width: 100%;
    height: 100%;
    margin: 0;
}

.container {
	display: flex;
	width: 100%;
	height: 100%;
}

.zone {
	display: flex;

	&.remote {
		flex-basis: remote_size;
	}

	video {
	}
}

.chat {
	display: flex;
	flex-direction: column;
	flex: 1;
	justify-content: flex-end;

	background: #e8e8e8;
	padding: 5px;

	input {
		border: 0px;
		margin: 0;
		padding: 5px;
	}

	video {
		width: 100%;
		margin: 5px 0;
	}

	ul#messages {
		flex: 1;

		font-size: 0.8em;
		margin: 0;
		padding: 0;
		overflow-x: hidden;
		overflow-y: scroll;
	}
}
